{
  "name": "servicebus_messenger",
  "private": true,
  "version": "1.0.3",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "proxy": "node proxy-server.js",
    "build": "tsc -b && vite build && node copy-run.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "npm run build && electron .",
    "package-win": "tsc -b && vite build && node copy-run.js && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.servicebus.messenger",
    "productName": "Azure Service Bus Messenger",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
